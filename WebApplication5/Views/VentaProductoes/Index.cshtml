@model IEnumerable<WebApplication5.Models.VentaProducto>

@{
    ViewData["Title"] = "Index";
}

<h1>Venta Producto</h1>

<p>
    <a asp-action="Create">Crear nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdProductoNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdVentaNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdProductoNavigation.IdProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdVentaNavigation.IdVenta)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdVentaProducto">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdVentaProducto">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdVentaProducto">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
