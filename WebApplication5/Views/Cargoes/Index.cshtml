@model IEnumerable<WebApplication5.Models.Cargo>

@{
    ViewData["Title"] = "Index";
}

<h1>Cargos</h1>

<p>
    <a asp-action="Create">Crear nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salario)
            </td>
            <td>
                <a asp-action="Edit" class="btn-warning" asp-route-id="@item.IdCargo">Edit</a> |
                <a asp-action="Details" class="btn-primary" asp-route-id="@item.IdCargo">Details</a> |
                <a asp-action="Delete" class="btn-danger" asp-route-id="@item.IdCargo">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
